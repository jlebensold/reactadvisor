<div class="row">
  <h1><%= @restaurant.name %></h1>
</div>
<div class="row">
  <div class="columns medium-6">
    <p>
      <%= @restaurant.description %>
    </p>
  </div>
  <div class="columns medium-6">
    <h3>Comments</h3>
    <div id="CommentSection"><%= isomorphic('CommentSection', {restaurant_id: @restaurant.id, comments: render(template: 'comments/index.json.jbuilder')} ) %></div>
  </div>
</div>


<script>
  document.addEventListener("DOMContentLoaded", function(event) { 
    renderCommentSection('CommentSection',
    {
      restaurant_id: '<%= @restaurant.id %>',
      comments: '<%= raw(render(template: 'comments/index.json.jbuilder')) %>'
    });
  });
</script>
